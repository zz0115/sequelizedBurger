<h1>Eat-Da-Burgers!</h1>

<img src="/assets/img/burger.jpg">

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>You can now devour: </h2>
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devour=true}} {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>You have devoured:</h2>
      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devour=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button class="btn btn-primary" type="submit">Submit</button>
</form>